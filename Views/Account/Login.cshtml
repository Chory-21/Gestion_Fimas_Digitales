@model Gestion_Fimas_Digitales.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null; // Aquí va el Layout en null para evitar el layout predeterminado
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <title>@ViewData["Title"]</title>
    <style>
        /* Estilos personalizados para el card de inicio de sesión */
        .login-card {
            width: 600px; /* Aumentar el ancho del card */
            padding: 40px; /* Aumentar el espaciado interno */
            border-radius: 12px; /* Bordes redondeados */
            box-shadow: 0 6px 25px rgba(0, 0, 0, 0.3); /* Sombra más intensa */
        }

        .form-control {
            height: 55px; /* Aumentar la altura de los campos de entrada */
            font-size: 1.1rem; /* Agrandar texto */
        }

        .btn {
            height: 55px; /* Aumentar la altura del botón */
            font-size: 1.1rem; /* Agrandar texto del botón */
        }

        .card-title {
            font-size: 2rem; /* Agrandar el título */
            font-weight: bold;
        }
    </style>
</head>
<body class="bg-light d-flex justify-content-center align-items-center" style="height: 100vh;">

    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg login-card">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Login</h2>
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-4">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control" placeholder="Nombre de usuario" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check mb-4">
                        <input class="form-check-input" asp-for="RememberMe" />
                        <label class="form-check-label" asp-for="RememberMe">
                            Recordarme
                        </label>
                    </div>

                    <div class="d-grid">
                        <input type="submit" value="Ingresar" class="btn btn-primary btn-block" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>
